# frozen_string_literal: true

source "https://rubygems.org"

# Pin gems to versions compatible with Ruby 3.1.6 (used by GitHub Pages)
# activesupport 8.0.0+ requires Ruby >= 3.2.0
gem "activesupport", "~> 7.2.0"
# connection_pool 3.0.2+ requires Ruby >= 3.2.0
gem "connection_pool", "~> 2.5.0"
# minitest 6.0.0+ requires Ruby >= 3.2.0
gem "minitest", "~> 5.27.0"

# Use github-pages which includes compatible Jekyll version
gem "github-pages", group: :jekyll_plugins

# Dinky theme
gem "jekyll-theme-dinky"
